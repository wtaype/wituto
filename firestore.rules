rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    match /{document=**} {
      allow read, write: if request.auth != null; 
    } //General y todas bds con Auth
      
    match /smiles/{document} {
      allow read: if true; 
      allow write: if true; 
    } // Consulta para validar, crear, eliminar publico.Actualizar solo Autenticados

    match /preferencias/{document} {
      allow read: if true; 
      allow write: if true; 
    } // Consulta para validar, crear, eliminar publico.Actualizar solo Autenticados
    
    match /posts/{postId} {
      // Lectura: todos pueden leer posts
      allow read: if true;

      // Crear: sólo autenticados con campos requeridos
      allow create: if request.auth != null
                    && request.resource.data.keys().hasAll([
                      'id', 'titulo', 'autor', 'categoria',
                      'contenido', 'activo', 'fecha', 'vistas', 'tags'
                    ]);

      // Actualizar:
      // - cualquiera puede modificar solo 'vistas'
      // - autenticados pueden actualizar cualquier campo
      allow update: if request.resource.data.diff(resource.data).affectedKeys().hasOnly(['vistas'])
                    || request.auth != null;

      // Borrar: sólo autenticados
      allow delete: if request.auth != null;
    }
    
  }
}