rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    match /{document=**} {
      allow read, write: if request.auth != null; 
    } //General y todas bds con Auth
      
    match /smiles/{document} {
      allow read: if true; 
      allow write: if true; 
    } // Consulta para validar, crear, eliminar publico.Actualizar solo Autenticados

    match /preferencias/{document} {
      allow read: if true; 
      allow write: if true; 
    } // Consulta para validar, crear, eliminar publico.Actualizar solo Autenticados
    
    // Colecci√≥n posts
    match /posts/{postId} {
      // Lectura: Todos pueden leer posts activos
      allow read: if resource.data.activo == true || request.auth != null;
      
      // Escritura: Solo usuarios autenticados (admins)
      allow create: if request.auth != null 
                    && request.resource.data.keys().hasAll(['id', 'titulo', 'autor', 'categoria', 'contenido', 'activo', 'fecha', 'vistas', 'tags']);
      
      allow update: if request.auth != null;
      
      allow delete: if request.auth != null;
    }
    
    // Incrementar vistas (permitir a todos)
    match /posts/{postId} {
      allow update: if request.resource.data.diff(resource.data).affectedKeys().hasOnly(['vistas']);
    }
    
  }
}